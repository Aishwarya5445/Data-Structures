#include<stdio.h> 
int LinearSearch(int arr[],int size,int key) 
{     
   int i; 
   for(i=0;i<size;i++) 
    { 
     if(arr[i]==key) 
       {      
          return i; 
         } 
    } 
   return -1; 
} 
int main() 
{ 
int arr[]={5,3,8,4,2};
int size=sizeof(arr)/sizeof(arr[0]); 
int key=2; 
int result=LinearSearch(arr,size,key);
if(result!=-1)   
  printf(“element found at index = %d\n”,result);
else  
  printf(“element not found in the list\n”); 
return 0; 
} 
