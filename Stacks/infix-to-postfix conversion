#include<stdio.h>
#include<string.h>
#include <ctype.h>
#define SIZE 50
char s[SIZE];
int top=-1;
void push(char ele)
{
s[++top]=ele;
}
char pop()
{
return(s[top--]);
}
int priority(char ele)
{
switch(ele)
{
case '$': return 0;
case '(': return 1;
case '+': return 2;
case '-': return 2;
case '*': return 3;
case '/': return 3;
}
}
void main()
{
char infx[50],postfx[50],ch;
int i=0,k=0;
printf("Read the Infix Expression : ");
scanf("%s",infx);
push('$');
while( (ch=infx[i++]) != '\0')
{
if( ch == '(')
push(ch);
else
if(isalnum(ch))
postfx[k++]=ch;
else
if( ch == ')')
{
while( s[top] != '(')
postfx[k++]=pop();
pop();
}
else
{
while( priority(s[top]) >= priority(ch))
postfx[k++]=pop();
push(ch);
}
}
while( s[top] != '$')
postfx[k++]=pop();
postfx[k]='\0';
printf("Given Infix Expn: %s \n Postfix Expn: %s\n",infx,postfx);
}
