#include<stdio.h> 
int main() 
{ 
int i,j,n,a[100],t,min,k; 
printf("enter the number of elements"); 
scanf("%d",&n);
printf("enter %d elements\n",n); 
for (i=0;i<n;i++) 
 { 
   scanf("%d",&a[i]); 
 } 
for (i=0;i<n;i++) 
 { 
   min=i;
   for (j=i+1;j<n;j++) 
  { 
    if (a[min]>a[j]) 
    { 
      min=j; 
      if(min!=k) 
      { 
        t=a[i];
        a[i]=a[min];
        a[min]=t; 
      } 
    } 
  } 
} 
printf("elements after sorting:\n"); 
for (i=0;i<n;i++) 
{ 
  printf("%d \n",a[i]); 
} 
return 0; 
} 
