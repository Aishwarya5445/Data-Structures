#include <stdio.h> 
int bfs[20],rear = -1,front = -1,vt[20]; 
void store(int n)  
{ 
    bfs[++rear] = n; 
} 
int delet()  
{ 
    return bfs[++front]; 
} 
void bfsearch(int a[][10], int n, int id)  
{ 
    int i; 
    for (i=0;i<n;i++) 
        vt[i] = 0; 
    id=id-1; 
    store(id); 
    vt[id] = 1; 
    printf("\nBFS visited vertices: "); 
    while (front!=rear)  
    { 
        id = delet(); 
        printf("%d ", id + 1); 
        for (i = 0; i < n; i++)  
        { 
            if (a[id][i] == 1 && vt[i] == 0) 
            { 
                store(i); 
                vt[i] = 1; 
            } 
        } 
    } 
} 
int main() 
 { 
    int a[10][10], n, i, j, id; 
    printf("Enter number of vertices on graph:"); 
    scanf("%d", &n); 
    printf("Enter adjacency matrix:\n"); 
    for (i = 0; i < n; i++) 
        for (j = 0; j < n; j++) 
            scanf("%d", &a[i][j]); 
    printf("Enter starting vertex:"); 
    scanf("%d", &id); 
    bfsearch(a, n, id); 
    return 0; 
}
